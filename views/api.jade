doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title JQuery JSONView
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/jquery-jsonview/1.2.3/jquery.jsonview.min.css')
        script(type='text/javascript', src='//code.jquery.com/jquery.min.js')
        script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery-jsonview/1.2.3/jquery.jsonview.min.js')
        script.
            var json = !{json};
            $(function() {
                $("#json").JSONView(json);
                $("#json-collapsed").JSONView(json, { collapsed: true, nl2br: true, recursive_collapser: true });
                $('#collapse-btn').on('click', function() {
                    $('#json').JSONView('collapse');
                });
                $('#expand-btn').on('click', function() {
                    $('#json').JSONView('expand');
                });
                $('#toggle-btn').on('click', function() {
                    $('#json').JSONView('toggle');
                });
                $('#toggle-level1-btn').on('click', function() {
                    $('#json').JSONView('toggle', 1);
                });
                $('#toggle-level2-btn').on('click', function() {
                    $('#json').JSONView('toggle', 2);
                });
            });
    body
        h2 Data
        button#collapse-btn Collapse
        button#expand-btn Expand
        button#toggle-btn Toggle
        button#toggle-level1-btn Toggle level1
        button#toggle-level2-btn Toggle level2
        #json
        h2 Data Collapsed
        #json-collapsed


